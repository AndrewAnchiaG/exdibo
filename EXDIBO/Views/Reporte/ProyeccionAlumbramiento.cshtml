@model IEnumerable<EXDIBO.Util.Born>

@{
    ViewData["Title"] = "Reporte Proyección Alumbramiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reporte Proyecci&oacute;n de Alumbramientos</h1>

<form asp-controller="Reporte" asp-action="ProyeccionAlumbramiento" method="POST">
    <div class="row">
        <div class="col">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text" id="btnGroupAddon">Desde</div>
                </div>
                <input type="date" name="Desde" class="form-control" min="2015-01-01">
            </div>
        </div>
        <div class="col">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text" id="btnGroupAddon">Hasta</div>
                </div>
                <input type="date" name="Hasta" class="form-control" min="2015-01-30">
            </div>
        </div>
        <div class="col">
            <button class="btn btn-success" type="submit">Buscar</button>
        </div>
    </div>
    <span class="text-center text-danger"> @ViewData["error"] </span>
</form>

<hr />

@{
    int num = 1;
    if (Model != null)
    {

    <table class="table table-responsive table-hover table-striped">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Numero
                        </th>
                        <th>
                            Arete
                        </th>
                        <th>
                            Vaca
                        </th>
                        <th>
                            Raza
                        </th>
                        <th>
                            Producción
                        </th>
                        <th>
                            Finca
                        </th>
                        <th>
                            Grupo
                        </th>
                        <th>
                            Preño
                        </th>
                        <th>
                            Alumbramiento
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td>
                                @num
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Number)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Earring)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Bovine)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Breed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductionMilk)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Farm)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Group)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ovulation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Originate)
                            </td>
                        </tr>
                    num++;
                }
                </tbody>
    </table>
    } else {
    <div class="mt-4">
                <hr />
                <h4 class="text-center mt-3">Seleccione el intervalo de fechas a consultar</h4>
                <p class="mt-3">De momento no hay información para mostrar, diríjase a hacer una consulta para mostrar la información de ese lapso de tiempo</p>
    </div>
    }
}





     