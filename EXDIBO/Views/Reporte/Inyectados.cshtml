@model IEnumerable<EXDIBO.Util.WithdrawalReport>

@{
    ViewData["Title"] = "Inyectados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reporte de Animales Inyectados</h1>

<form asp-controller="Reporte" asp-action="Inyectados" method="POST">

    <div class="row">
        <div class="col">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text" id="btnGroupAddon">Desde</div>
                </div>
                <input type="date" name="Desde" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="2010-01-01">
            </div>
        </div>
        <div class="col">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text" id="btnGroupAddon">Hasta</div>
                </div>
                <input type="date" name="Hasta" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="2010-01-01">
            </div>
        </div>
        <div class="col">
            <button class="btn btn-success" type="submit">Buscar</button>
        </div>
    </div>
    <span class="text-center text-danger"> @ViewData["error"] </span>
</form>





@{
    int num = 1;
   

    if (Model != null)
    {
    
        <table class="table table-responsive table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Inyectado
                    </th>
                    <th>
                        Número
                    </th>
                    <th>
                        Animal
                    </th>
                    <th>
                        Finca
                    </th>
                    <th>
                        Grupo
                    </th>
                    <th>
                        Medicamento
                    </th>
                    <th>
                        Tipo
                    </th>
                    <th>
                        Aplicado
                    </th>
                    <th>
                        Durante
                    </th>
                    <th>
                        Tiempo Retiro
                    </th>
                    <th>
                        Fin de Retiro
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @num
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Register)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bovine)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Farm)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Group)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Kind)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apply)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => item.Times) Días
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Withdrawal) Días
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndWithdrawal)
                        </td>
                    </tr>
                    num++;
                }
            </tbody>
        </table>
    } else {
    <div class="mt-4">
                <hr />
                <h4 class="text-center mt-3">Seleccione el intervalo de fechas a consultar</h4>
                <p class="mt-3">De momento no hay información para mostrar, diríjase a hacer una consulta para mostrar la información de ese lapso de tiempo</p>
    </div>
    }
}
