@model EXDIBO.Util.ProductionReport

@{
    ViewData["Title"] = "Detalles Producción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Detalles de Producci&oacute;n</h1>

<div>
    <h4>Producci&oacute;n</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Número de Registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Nombre de Registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2">
            Producci&oacute;n
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Production) ML
        </dd>
        <dt class = "col-sm-2">
            N&uacute;mero de Animal
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            Arete
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Earring)
        </dd>
        <dt class = "col-sm-2">
            Vaca
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Gestaci&oacute;n
        </dt>
        <dd class = "col-sm-10">
            @{
                if (Convert.ToBoolean(Model.Pregnant)) 
                { 
                        <span>Si</span> 
                } else {
                        <span>No</span>    
                }
            }
        </dd>
        <dt class = "col-sm-2">
            Fecha
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Register)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @{
                if (!Convert.ToBoolean(Model.Status)) 
                { 
                        <span>Activo</span> 
                } else {
                        <span>Inactivo</span>    
                }
            }
        </dd>
    </dl>
</div>
<div>
     <a class="btn btn-success" href="javascript: history.go(-1)"><i class="fa-solid fa-arrow-left"></i> Atrás</a>

    <a asp-controller="Animal" asp-action="EditarProduccion" asp-route-id="@Model.Id" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i> Editar</a>

    <a asp-controller="Animal" asp-action="Producciones" class="btn btn-success"><i class="fa-solid fa-weight-scale"></i> Producciones</a>

    <a asp-controller="Expediente" asp-action="Portada" class="btn btn-success"><i class="fa-solid fa-bars"></i> Menú</a>
</div>
