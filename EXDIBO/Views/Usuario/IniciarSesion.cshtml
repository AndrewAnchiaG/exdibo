@model EXDIBO.Util.User

@{
    ViewData["Title"] = "Iniciar Sesion";
    Layout = "~/Views/Shared/_Start.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/css/Butons.css" />

<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }
</style>


<section class="">
    <div class="container">
        <div class="row align-items-center justify-content-center mt-2">
            
            <!-- Col IZQ-->
            <div class="col mb-3">
                <h1 class="text-center display" style="font-family:'Liberation Sans'">Expediente Digital Bovino</h1>
                <img src="~/imagenes/cinco_lemosine.jpg" class="img-fluid rounded" width="100%" height="100%" alt="Ganado" />
            </div>

            <!-- Col DER -->
            <div class="col">

                <form asp-action="IniciarSesion" asp-controller="Usuario" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Vet Imagen -->
                    <div class="form-outline mb-3 align-content-center justify-content-center text-center">
                        <img src="~/imagenes/veterinary.jpg" class="text-center rounded-circle" width="150px" height="150px" alt="Veterinario" />
                    </div>

                    <!-- Name Page-->
                    <div class="form-outline mb-2 align-content-center justify-content-center text-center">
                        <h1>Iniciar Sesi&oacute;n</h1>
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-2">
                        <label class="form-label" for="form1Example13">Usuario</label>

                        <input type="email" id="form1Example13" class="form-control form-control-lg" asp-for="Email" placeholder="Usuario" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline">
                        <label class="form-label" for="form1Example23">Contraseña</label>
                        <input type="password" id="form1Example23" class="form-control form-control-lg" asp-for="Password" placeholder="Contraseña" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    @*
                    <div class="d-flex justify-content-around align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input bg-success border-dark" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Recordarme</label>
                        </div>

                    </div> *@

                    <!-- Submit button -->
                    <div class="text-center">
                    <button type="submit" class="btn effect01 mt-3 mb-3" style="width:170px; height:60px;">Ingresar  <i class="fa-solid fa-right-to-bracket"></i></button>
                    </div>
                    @{
                        if (Convert.ToString(@ViewData["ErrorInicio"]) != String.Empty)
                        {
                                <div class="alert alert-danger" role="alert"> @ViewData["ErrorInicio"] </div>
                        }
                    }
                </form>
            </div>
        </div>
    </div>
</section>
