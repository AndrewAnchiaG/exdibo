@model IEnumerable<EXDIBO.Util.Kind>

@{
    ViewData["Title"] = "Enfermedades";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int num = 1;
}

<h1 class="text-center">Enfermedades</h1>

<p>
    <a class="btn btn-success" asp-controller="Mantenimiento"  asp-action="Enfermedad"><i class="fa-solid fa-viruses"></i> Enfermedad</a>
</p>



<table class="table table-responsive table-hover table-striped">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                N&uacute;mero Enfermedad
            </th>
            <th>
                Enfermadad
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @num
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (Convert.ToBoolean(item.Status))
                    {
                        <span>Activo</span>
                    }
                    else
                    {
                        <span>Inactivo</span>
                    }
                </td>
                <td>
                   
                       @*
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="DetallesFinca" asp-controller="Finca" asp-route-id="@item.Id" class="btn btn-info text-light"> <i class="fa-solid fa-file-lines"></i></a>
                        <a asp-action="EditarFinca" asp-controller="Finca" asp-route-id="@item.Id" class="btn btn-dark text-light"> <i class="fa-solid fa-pen-to-square"></i></a>*@
                        @if (Convert.ToBoolean(item.Status))
                        {
                            <a class="btn btn-secondary text-light" asp-controller="Mantenimiento" asp-action="EstadoEnfermedad" asp-route-id="@item.Id" asp-route-status="false"><i class="fa-solid fa-trash"></i></a>
                        }
                        else
                        {
                            <a class="btn btn-success text-light" asp-controller="Mantenimiento" asp-action="EstadoEnfermedad" asp-route-id="@item.Id" asp-route-status="true"><i class="fa-solid fa-check"></i></a>
                        }
                   
                </td>
            </tr>
            num++;
        }
    </tbody>
</table>





